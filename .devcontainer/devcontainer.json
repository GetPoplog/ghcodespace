{
    "name": "Ubuntu",
    "image": "ubuntu:22.04",
    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        },
        "ghcr.io/guiyomh/features/just:0": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "settings": { 
                "terminal.integrated.shell.linux": "/bin/bash"
            }      
        }
    },
    "postCreateCommand": "apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y build-essential g++ gdb && ./.devcontainer/init.sh",
    "runArgs": [
        "--security-opt",
        "seccomp=./.devcontainer/poplog_seccomp.json"
    ]
}
